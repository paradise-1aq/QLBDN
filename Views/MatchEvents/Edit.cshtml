        border: 1px solid #e2e8f0;
    }

    .form-title {
        font-size: 1.8rem;
        font-weight: 800;
        color: #059669;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 700;
        display: block;
        color: #475569;
        margin-bottom: 0.4rem;
    }

    select, input, textarea {
        width: 100%;
        border-radius: 12px;
        padding: 0.8rem;
        border: 2px solid #e2e8f0;
        font-size: 1rem;
        margin-bottom: 1.2rem;
    }

    .btn-save {
        background: #10b981;
        color: white;
        padding: 1rem;
        font-weight: 800;
        border-radius: 12px;
        text-align: center;
        width: 100%;
        margin-top: 1rem;
        cursor: pointer;
        border: none;
    }

    .btn-back {
        display: block;
        margin-top: 1rem;
        color: #475569;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
    }

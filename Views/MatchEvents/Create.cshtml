@section Scripts {
<script>
    // Match selector - load players
    document.getElementById("matchSelector").addEventListener("change", function () {
        var matchId = this.value;
        if (!matchId) return;

        // Show loading
        document.getElementById("loadingOverlay").classList.add("active");

        fetch(`/MatchEvents/GetPlayersByMatch?matchId=${matchId}`)
            .then(res => res.json())
            .then(players => {
                let dropdown = document.getElementById("playerSelector");
                dropdown.innerHTML = `<option value="">-- Ch·ªçn c·∫ßu th·ªß --</option>`;

                players.forEach(p => {
                    dropdown.innerHTML += `<option value="${p.playerId}">${p.fullName}</option>`;
                });

                // Hide loading
                document.getElementById("loadingOverlay").classList.remove("active");
            })
            .catch(error => {
                console.error('Error:', error);
                alert('C√≥ l·ªói khi t·∫£i danh s√°ch c·∫ßu th·ªß!');
                document.getElementById("loadingOverlay").classList.remove("active");
            });
    });

    // Form validation
    document.getElementById("eventForm").addEventListener("submit", function(e) {
        const matchId = document.getElementById("matchSelector").value;
        const playerId = document.getElementById("playerSelector").value;
        const eventType = document.querySelector('[name="EventType"]').value;
        const dateTime = document.querySelector('[name="DateTime"]').value;

        if (!matchId || !playerId || !eventType || !dateTime) {

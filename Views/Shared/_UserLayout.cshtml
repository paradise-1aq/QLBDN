<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLBDN</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        * { margin:0; padding:0; box-sizing:border-box; }

        body {
            font-family: "Inter", sans-serif;
            background:#f8fafc;
            color:#0f172a;
        }

        /* ===== HEADER ===== */
        .header {
            width:100%;
            padding:1rem 3rem;
            background:white;
            box-shadow:0 2px 8px rgba(0,0,0,0.05);
            position:sticky;
            top:0;
            z-index:100;
            display:flex;
            justify-content:space-between;
            align-items:center;
        }

        .logo {
            display:flex;
            align-items:center;
            gap:.5rem;
            font-size:1.4rem;
            font-weight:800;
            color:#059669;
        }

        .nav {
            display:flex;
            gap:1.5rem;
        }

        .nav a {
            text-decoration:none;
            font-weight:600;
            color:#475569;
            padding:.5rem .75rem;
            border-radius:8px;
            transition:.25s ease;
        }

        .nav a:hover,
        .nav a.active {
            background:#e2f7ee;
            color:#059669;
        }

        /* ===== USER AVATAR + DROPDOWN ===== */
        .user-box {
            display:flex;
            align-items:center;
            gap:.6rem;
            position:relative;
            cursor:pointer;
        }

        .user-avatar {
            width:38px; height:38px;
            border-radius:50%;
            background:linear-gradient(135deg,#34d399,#10b981);
            display:flex; justify-content:center; align-items:center;
            color:white; font-weight:700;
        }

        .dropdown {
            position:absolute;
            top:48px;
            right:0;
            background:white;
            border-radius:10px;
            box-shadow:0 4px 14px rgba(0,0,0,0.12);
            display:none;
            min-width:150px;
            overflow:hidden;
        }

        .dropdown a {
            display:block;
            padding:.75rem 1rem;
            text-decoration:none;
            color:#1e293b;
            font-size:.9rem;
            transition:.2s;
        }

        .dropdown a:hover {
            background:#f1f5f9;
        }

        .dropdown.show {
            display:block;
        }

        /* ===== PAGE CONTENT ===== */
        .content-area {
            max-width:1200px;
            margin:2rem auto;
            padding:1rem;
        }

        main {
            background:white;
            border-radius:16px;
            padding:2rem;
            box-shadow:0 2px 6px rgba(0,0,0,0.06);
        }

        /* FOOTER */
        .footer {
            text-align:center;
            padding:1rem;
            margin-top:2rem;
            color:#64748b;
            font-size:.9rem;
        }
    </style>

    @RenderSection("Styles", required:false)
</head>

<body>

@{
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
    var username = Context.Session.GetString("Username") ?? "User";
}

<header class="header">
    <div class="logo">
        ‚öΩ <span>QLBDN</span>
    </div>

    <nav class="nav">
        <a asp-controller="UserHome" asp-action="Index"
           class="@(currentPath.Contains("/userhome") ? "active" : "")">
            Trang ch·ªß
        </a>

        <a asp-controller="News" asp-action="Index"
           class="@(currentPath.Contains("/news") ? "active" : "")">
            Tin t·ª©c
        </a>

        <a asp-controller="Matches" asp-action="Index"
           class="@(currentPath.Contains("/matches") ? "active" : "")">
            L·ªãch thi ƒë·∫•u
        </a>

        <a asp-controller="TicketBooking" asp-action="SelectRound"
           class="@(currentPath.Contains("selectround") ? "active" : "")">
            Mua v√© theo v√≤ng
        </a>
    </nav>

    <!-- ===== USER AVATAR + DROPDOWN ===== -->
    <div class="user-box" onclick="toggleDropdown()">
        <div class="user-avatar">@username.Substring(0,1).ToUpper()</div>
        <div style="font-weight:600;">@username</div>

        <div class="dropdown" id="dropdownMenu">
            <a asp-controller="UserHome" asp-action="Index">üè† Trang c√° nh√¢n</a>
            <a asp-controller="User" asp-action="Logout">üö™ ƒêƒÉng xu·∫•t</a>
        </div>
    </div>
</header>

<!-- ===== MAIN CONTENT ===== -->
<div class="content-area">
    <main role="main">
        @RenderBody()
    </main>
</div>

<div class="footer">
    ¬© @DateTime.Now.Year QLBDN ‚Äì Giao di·ªán ng∆∞·ªùi d√πng. All rights reserved.
</div>

<script>
    function toggleDropdown() {
        document.getElementById("dropdownMenu").classList.toggle("show");
    }

    window.onclick = function (e) {
        if (!e.target.closest(".user-box")) {
            document.getElementById("dropdownMenu").classList.remove("show");
        }
    }
</script>

@RenderSection("Scripts", required:false)
</body>
</html>

        </h3>

        @if (players == null || players.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">‚öΩ</div>
                <p class="empty-text">CLB ch∆∞a c√≥ c·∫ßu th·ªß n√†o</p>
            </div>
        }
        else
        {
            <div class="players-grid">
                @foreach (var p in players)
                {
                    <div class="player-card-mini">
                        <div class="player-avatar-mini">‚öΩ</div>
                        <div class="player-info">
                            <div class="player-name">@p.FullName</div>
                            <div class="player-meta">
                                <span class="player-role">
                                    <span>üìç</span>
                                    <span>@(p.Role?.RoleName ?? "N/A")</span>
                                </span>
                                @if (p.ShirtNumber.HasValue && p.ShirtNumber > 0)
                                {
                                    <span class="player-number">@p.ShirtNumber</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
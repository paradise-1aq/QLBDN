@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewData["Title"] = "Chi ti·∫øt c√¢u l·∫°c b·ªô";
    var club = ViewData["Club"] as QLBDN.Models.Club;
    var players = ViewData["Players"] as List<QLBDN.Models.Player>;
}

@section Styles {
<style>
    .detail-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #059669;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s;
    }

    .back-link:hover {
        color: #047857;
        transform: translateX(-3px);
    }

    .detail-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
        border: 1px solid #f1f5f9;
        margin-bottom: 2rem;
    }

    .club-header {
        text-align: center;
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #f1f5f9;
    }

    .club-logo-big {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        border: 4px solid #6ee7b7;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        margin: 0 auto 1.5rem;
        box-shadow: 0 4px 16px rgba(16, 185, 129, 0.2);
        transition: all 0.3s;
    }

    .club-logo-big:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
    }

    .info-title {
        font-size: 2rem;
        font-weight: 800;
        color: #059669;
        margin-bottom: 0.5rem;
    }

    .info-subtitle {
        color: #64748b;
        font-size: 0.95rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-box {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s;
    }

    .info-box:hover {
        background: white;
        border-color: #6ee7b7;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.1);
    }

    .info-box-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-box-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #0f172a;
    }

    .info-box-value.highlight {
        color: #10b981;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .players-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }

    .player-card-mini {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 1.25rem;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .player-card-mini:hover {
        border-color: #6ee7b7;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);
        transform: translateY(-2px);
    }

    .player-avatar-mini {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        border: 2px solid #6ee7b7;
        flex-shrink: 0;
    }

    .player-info {
        flex: 1;
        min-width: 0;
    }

    .player-name {
        font-weight: 700;
        color: #0f172a;
        font-size: 0.95rem;
        margin-bottom: 0.25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .player-meta {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.85rem;
        color: #64748b;
    }

    .player-role {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .player-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #34d399, #10b981);
        color: white;
        font-weight: 700;
        font-size: 0.75rem;
        padding: 0.2rem 0.5rem;
        border-radius: 6px;
        min-width: 28px;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: #f8fafc;
        border-radius: 12px;
        border: 1px dashed #cbd5e1;
    }

    .empty-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.4;
    }

    .empty-text {
        color: #64748b;
        font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .detail-container {
            padding: 1rem 0.75rem;
        }

        .detail-card {
            padding: 1.5rem;
        }

        .info-title {
            font-size: 1.6rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .players-grid {
            grid-template-columns: 1fr;
        }

        .club-logo-big {
            width: 120px;
            height: 120px;
            font-size: 3rem;
        }
    }
</style>
}

<div class="detail-container">
    <a href="/clubs" class="back-link">
        <span>‚Üê</span>
        <span>Quay l·∫°i danh s√°ch</span>
    </a>

    <div class="detail-card">
        <!-- Club Header -->
        <div class="club-header">
            <div class="club-logo-big">üèÜ</div>
            <h2 class="info-title">@club?.Name</h2>
            <p class="info-subtitle">Th√¥ng tin chi ti·∫øt c√¢u l·∫°c b·ªô</p>
        </div>

        <!-- Club Info Grid -->
        <div class="info-grid">
            <div class="info-box">
                <div class="info-box-label">
                    <span>üèü</span>
                    <span>S√¢n nh√†</span>
                </div>
                <div class="info-box-value">
                    @(!string.IsNullOrWhiteSpace(club?.HomeStadium) ? club.HomeStadium : "Ch∆∞a c·∫≠p nh·∫≠t")
                </div>
            </div>

            <div class="info-box">
                <div class="info-box-label">
                    <span>üë•</span>
                    <span>S·ªë c·∫ßu th·ªß</span>
                </div>
                <div class="info-box-value highlight">
                    @(players?.Count ?? 0)
                </div>
            </div>

            <div class="info-box">
                <div class="info-box-label">
                    <span>üÜî</span>
                    <span>M√£ CLB</span>
                </div>
                <div class="info-box-value">
                    @club?.ClubId
                </div>
            </div>
        </div>

        <!-- Players List Section -->
        <h3 class="section-title">
            <span>üìã</span>
